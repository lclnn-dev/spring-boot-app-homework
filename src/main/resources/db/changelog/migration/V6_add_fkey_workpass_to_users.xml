<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="addColumnPassIdToUsers" author="Olha">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="users" columnName="pass_id"/>
            </not>
        </preConditions>
        <addColumn tableName="users">
            <column name="pass_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <changeSet id="addForeignKeyConstraint" author="Olha">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_users_work_pass" foreignKeyTableName="users"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="pass_id"
                                 constraintName="fk_users_work_pass"
                                 referencedTableName="workpasses"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
