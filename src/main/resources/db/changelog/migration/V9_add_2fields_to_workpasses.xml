<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="addColumnsToWorkpasses" author="Olha">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="workpasses" columnName="prev_employee_id"/>
                <columnExists tableName="workpasses" columnName="cancel_date"/>
            </not>
        </preConditions>
        <addColumn tableName="workpasses">
            <column name="prev_employee_id" type="INTEGER"/>
            <column name="cancel_date" type="TIMESTAMP"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
