<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="addColumnPhotoId" author="Olha">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="workpasses" columnName="photo_id"/>
            </not>
        </preConditions>
        <addColumn tableName="workpasses">
            <column name="photo_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <changeSet id="addForeignKeyToPhotoId" author="Olha">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_workpass_photo" foreignKeyTableName="workpasses"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="workpasses"
                                 baseColumnNames="photo_id"
                                 constraintName="fk_workpass_photo"
                                 referencedTableName="photos_pass"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>