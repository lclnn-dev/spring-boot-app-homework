<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createTableWorkPasses" author="Olha">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="workpasses"/>
            </not>
        </preConditions>
        <createTable tableName="workpasses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="issue_date" type="TIMESTAMP"/>
            <column name="expire_date" type="TIMESTAMP"/>
            <column name="is_deleted" type="BOOLEAN"/>
            <column name="is_handed" type="BOOLEAN"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
